<!DOCTYPE html>
<html lang="kr">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

  <script>
    const btn1Handler = () => {
      let user_id = document.querySelector("#user_id").value;
      let targetData;
      let htmlTeplate;
      axios.get(`/json1/user/${user_id}`)
      .then(res => {
        document.querySelector("#btn1target").innerText =JSON.stringify(res.data);
        //alert( JSON.stringify(res.data));
        // targetData 로 그려보기
        // 데이터 넘겨서 그려보기
        targetData = res.data;
        console.log(res.data);
        return res.data
      })
      .then( data => {
        console.log(' 이전 단계 실행이 꼭 먼저 되어야 하고 다음 단계실행이 필요한 경우');
        htmlTeplate = `
          <div> 사용자 아이디  : <b> ${data.user_id} </b></div>
          <div> 사용자 이름  : <b> ${data.user_name} </b></div>
          <div> 사용자 기타사항  : <b> ${data.user_etc} </b></div>
        `;
        document.querySelector("#btn1target").innerHTML = htmlTeplate;
      })

    }
  </script>
</head>
<body>
  <hr/>
  <h1> 서버 비동기 호출을 동한 데이터 수신</h1>
  <div>
    <b> 사용자 아이디 </b> <input type="text" id="user_id" /><br/><br/>
    <button onclick="btn1Handler()">사용자 정보 호출</button>
  </div>
  <div id="btn1target"></div><br/><br/>
  <div id="btn2target">

  </div>
  <hr/>
</body>
</html>